{{>header}}

{{{opcionesMenuPorRol usuario contrasena operacion tipo}}}

<div class="container">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-5">
            <br>
            <div class="panel panel-primary" style="border-style: solid">
                <br>
                <div class="panel-heading">Inicio de sesion. {{nombre}}</div>
                    <div class="panel-body">
                        <br>
                        <form action="/validarLogin" method="post">
                            <div class="form-row">
                                <div class="form-group col-md-2"></div>
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">Usuario: </label>
                                </div>                   
                                <div class="form-group col-md-5">
                                    <input type="text" class="form-control" name="usuario" required placeholder="identificacion">
                                </div>
                                <div class="form-group col-md-2"></div>       
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-2"></div>
                                <div class="form-group col-md-3">
                                    <label for="inputEmail4">Contraseña:</label>
                                </div>                   
                                <div class="form-group col-md-5">
                                    <input type="password" class="form-control" name="contrasena" required>
                                </div>
                                <div class="form-group col-md-2"></div>       
                            </div> 

                            <div class="form-row">
                                <div class="form-group col-md-2"></div>
                                <div class="form-group col-md-5">
                                    <a href="/login">Olvide mi contraseña</a>
                                </div>                   
                                <div class="form-group col-md-3">
                                    <button class="btn btn-primary">Ingresar</button>
                                </div>
                                <div class="form-group col-md-2"></div>       
                            </div>                            
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>

{{>footer}}